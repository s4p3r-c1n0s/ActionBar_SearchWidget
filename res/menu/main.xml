<menu xmlns:android="http://schemas.android.com/apk/res/android" 
      xmlns:myactionbar="http://schemas.android.com/apk/res-auto">

   <group android:id="@+id/group1">

      <item android:id="@+id/action_compose"
            myactionbar:actionProviderClass="android.support.v7.widget.ShareActionProvider"
            android:icon="@android:drawable/ic_menu_send"
            android:title="@android:string/ok"
            myactionbar:showAsAction="always"/>

      <item android:id="@+id/action_search"
            myactionbar:actionViewClass="android.support.v7.widget.SearchView"
            android:icon="@android:drawable/ic_menu_search"
            android:onClick="onGroupItemClick"
            android:title="@android:string/search_go"
            myactionbar:showAsAction="always"/>

   </group>
   
   <group android:id="@+id/group2">

      <item android:id="@+id/star"
            android:title="@android:string/cancel"
            android:onClick="onGroupItemClick"
            android:icon="@android:drawable/btn_star_big_off"
            myactionbar:showAsAction="always"/>

      <item android:id="@+id/nested"
            android:title="NEST"
            myactionbar:showAsAction="always">
      </item>

   </group>



</menu>
